{
  "compilerOptions": {
    "target": "esnext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "declaration": true,
    "isolatedModules": false,
    "noEmit": true,
    "incremental": true,
    "noImplicitAny": true,
    "plugins": [{ "name": "typescript-styled-plugin" }]
  }
}
